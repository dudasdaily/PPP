{
    "configurations": [
        {
            "name": "Linux",
            // IntelliSense 모드를 WSL의 GCC 환경에 맞게 설정합니다.
            // clang을 주로 사용한다면 "linux-clang-x64"로 변경해도 됩니다.
            "intelliSenseMode": "linux-gcc-x64",
            // C++ 컴파일러의 전체 경로를 지정합니다.
            // 'which g++' 명령어로 경로를 확인할 수 있습니다.
            "compilerPath": "/usr/bin/g++",
            // 사용할 C++ 표준을 'c++23'으로 명시합니다.
            "cppStandard": "c++23",
            // 사용할 C 표준을 지정합니다.
            "cStandard": "c17",
            // 헤더 파일이 위치한 경로들을 포함합니다.
            // WSL의 기본 시스템 헤더 경로입니다.
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/include",
                "/usr/local/include"
            ]
        }
    ],
    "version": 4
}